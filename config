ngx_module_type=HTTP_AUX_FILTER

ngx_module_name=ngx_http_modsecurity_module

# Enable debug mode
CFLAGS="$CFLAGS -DDDEBUG=1"

# 生成解析器文件
echo "Generating parser files..."
cd $ngx_addon_dir/src/rule_parser
bison -d rule_parser.y
flex rule_lexer.l
cd -

ngx_module_incs="$ngx_addon_dir/src/ 
$ngx_addon_dir/src/"

ngx_module_deps="$ngx_addon_dir/src/ngx_vs_modsec_runtime.h \
                 $ngx_addon_dir/src/ruleset_types.h \
                 $ngx_addon_dir/src/rule_parser/rule_parser.tab.h"

ngx_module_srcs="$ngx_addon_dir/src/rule_parser/rule_mg.c \
                 $ngx_addon_dir/src/rule_parser/rule_parser.tab.c \
                 $ngx_addon_dir/src/rule_parser/lex.yy.c \
                 $ngx_addon_dir/src/rule_parser/pattern_converter.c \
                 $ngx_addon_dir/src/rule_parser/hyperscan_utils.c \
                 $ngx_addon_dir/src/auxiliary.c \
                 $ngx_addon_dir/src/ngx_vs_modsec_module.c \
                 $ngx_addon_dir/src/ngx_vs_modsec_precontent.c \
                 $ngx_addon_dir/src/ngx_vs_modsec_header_filter.c\
                 $ngx_addon_dir/src/ngx_vs_modsec_body_filter.c\
                 $ngx_addon_dir/src/ngx_vs_modsec_rbtree.c\
                 $ngx_addon_dir/src/ngx_vs_modsec_hyperscan.c\
                 $ngx_addon_dir/src/ngx_vs_modsec_args.c"
                 

ngx_module_libs="-lhs -lm"

. auto/module
